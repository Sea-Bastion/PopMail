<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="PopMail.Controllers.Login"
           fx:id="Pane"
           stylesheets="css/theme.css"
           prefHeight="400.0" prefWidth="350.0">

	<VBox alignment="CENTER">
		<padding><Insets topRightBottomLeft="50"/></padding>
		<ImageView/>
		<VBox>
			<padding><Insets bottom="20"/></padding>
			<Label text="Username"/>
			<TextField promptText="Username" fx:id="UserInput"/>
		</VBox>
		<VBox>
			<Label text="Password"/>
			<PasswordField promptText="Password" fx:id="PassInput"/>
		</VBox>
		<VBox alignment="BASELINE_RIGHT" spacing="10">
			<padding><Insets topRightBottomLeft="10"/></padding>
			<CheckBox text="Remember me" fx:id="Remember"/>
			<Button text="Login" onAction="#LoginButton"/>
		</VBox>
	</VBox>

</StackPane>
